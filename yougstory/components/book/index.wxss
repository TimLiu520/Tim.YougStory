/* components/book/index.wxss */
.container {
    display: flex;
    flex-direction: column;
  
    align-items: center;
    justify-content: flex-start;
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
    position: relative;

  }

 .container image{
     width: 100%;
     height: 100%;
     border-radius: 2px;
 }
 .container .description
 {
     width: 216rpx;
     display: flex;
     position: absolute;
     bottom: 0rpx;
     background-color: #ffffff;
     font-size: 24rpx;
     flex-direction: column;
     border-bottom-left-radius: 2px;
     border-bottom-right-radius: 2px;
     padding: 5rpx 10rpx 8rpx 15rpx;
 }
 .container .title{
margin-top: 10rpx;
text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
 }
 .container .author{
     font-size: 20rpx;
     color: #999999;
     margin-bottom: 10rpx;
     text-overflow: ellipsis;
white-space: nowrap;
overflow: hidden;
 }
 .container .foot{
    font-size: 20rpx;
    display: flex;
    justify-content: flex-end;
    flex-direction: row;
 }
 .container .footer
 {
     color: #999999;
 }

